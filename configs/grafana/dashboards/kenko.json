{
  "title": "Kenko Health Monitor",
  "uid": "kenko",
  "panels": [
    {
      "title": "Target Status",
      "type": "stat",
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "kenko_target_up",
          "legendFormat": "{{target}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {"type": "value", "options": {"0": {"text": "DOWN", "color": "red"}}},
            {"type": "value", "options": {"1": {"text": "UP", "color": "green"}}}
          ]
        }
      }
    },
    {
      "title": "Check Latency (p95)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(kenko_check_duration_seconds_bucket[5m]))",
          "legendFormat": "{{target}} p95"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "title": "Checks Per Minute",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
      "targets": [
        {
          "expr": "rate(kenko_check_total[5m]) * 60",
          "legendFormat": "{{target}} ({{status}})"
        }
      ]
    }
  ],
  "time": {"from": "now-1h", "to": "now"},
  "refresh": "15s"
}
